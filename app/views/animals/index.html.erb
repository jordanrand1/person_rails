<div class="container">
  <h1>Animals#index</h1>
  <p>Find me in app/views/animals/index.html.erb</p>
  <%= link_to 'New Animal', new_animal_path, {class: 'btn blue'} %>
  <table>
    <thead>
      <th>Name</th>
    </thead>
      <% @animals.each do |animal| %>
        <tbody>
          <tr>
            <td><%= animal.name %></td>
            <td><%= link_to 'Show', animal_path(animal.id), {class: 'btn'} %></td>
            <td><%= link_to 'Edit', edit_animal_path(animal.id), {class: 'btn green'} %></td>
            <td><%= link_to 'Delete', animal_path(animal.id), {method: :delete, class: 'btn red'} %></td>
          </tr>
        </tbody>
      <% end %>
  </table>
</div>
